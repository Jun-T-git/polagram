{
  "name": "@polagraph/core",
  "version": "0.0.1",
  "type": "module",
  "main": "./dist/polagraph-core.umd.cjs",
  "module": "./dist/polagraph-core.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/polagraph-core.js",
