{
  "name": "@polagram/core",
  "version": "0.0.3",
  "type": "module",
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jun-T-git/polagram.git"
  },
  "homepage": "https://polagram.org/",
  "license": "MIT",
  "keywords": [
    "polagram",
    "diagram",
    "visualization"
  ],
  "main": "./dist/polagram-core.umd.cjs",
  "module": "./dist/polagram-core.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/polagram-core.js",
      "require": "./dist/polagram-core.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite build --watch",
    "build": "tsc && vite build",
    "test": "vitest run",
    "test:watch": "vitest",
    "gen:docs": "node ../cli/dist/index.js run -c docs/sequence/polagram.yml"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "js-yaml": "^4.1.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "zod": "^4.2.1"
  }
}
